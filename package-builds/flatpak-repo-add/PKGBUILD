pkgname=flatpak-repo-add
pkgver=1.0
pkgrel=2
pkgdesc="Flatpak Fully Synced"
arch=('any')
license=('MIT')

#post_run() {
#    echo "Adding Flathub remote repository..."
#    flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo
#}

package() {
	cd $srcdir/../
	tar -xzvf flatpak.tar.gz
	mkdir -pv $pkgdir/var/lib/
	cp -r flatpak $pkgdir/var/lib/
}

